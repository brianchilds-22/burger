<div class="container">
    <div class+"row">
        <div class="col-xs-12 text-center" is="top-bar">
            <h1>EAT DA BURGER!</h1>
        </div>
        <div class="col-xs-6 text-center task" >
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-xs-9 text-center">
                        <pre>{{this.id}}. {{this.burger_name}}</pre>
                    </div>
                    <div class="col=xs-3 text-center">
                        <form method="POST" action="/burgers/update?_method=PUT"
                        class="button-size">
                        <input type="hidden" name="burger_id" type+"text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">DEVOUR IT!</button>
                        </form>
                    </div>
                    {{/unless}}
                    {{/each}}
            </div>
        </div>
        <div class="col-xs-6 text-center task">
            {{#each burger_data}}
            {{log "test"}}
                {{#if this.devoured}}
                      <div class="col-xs-9 text-center devour">
                        <pre>{{this.id}}. {{this.burger_name}}</pre>
                    </div>
                    <div class="col=xs-3 text-center">
                        <form method="POST" action="/burgers/update?_method=PUT"
                        class="button-size">
                        <input type="hidden" name="burger_id" type+"text" value={{this.id}}>
                        <br>
                        {{!-- <button type="submit" class="btn btn-default">Reset</button> --}}
                        </form>
                    </div>                    
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control"
            value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter in a burger you would like to eat!</p>
        </div>
    </div>
</div>