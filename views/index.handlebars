<div class="container">
    <img src="https://learn.compactappliance.com/wp-content/uploads/2017/09/burger.jpg">
    <div class="row">
        <div class="col-lg-12 text-center" id="top-bar">
            <h1>EAT DA BURGER!</h1>
        </div>
        <div class="container">
    <div class="row">
        <div class="col-sm-12 text-center enter-section">
            <h4>Enter in a burger you would like to eat!</h4>
            <br>
            <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control"
            value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            
        </div>
    </div>
</div>
  <div class="col-sm-6 text-center">
            <h4>Create It!</h4>
        </div>
            
        <div class="col-sm-6 text-center">
            <h4>Now You Ate It!</h4>
        </div>
        <br>
         <div class="col-sm-6 text-center task">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-xs-9 text-center">
                        <pre>{{this.id}}. {{this.burger_name}}</pre>
                    </div>
                    <div class="col-xs-3 text-center">
                        <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <button type="submit" class="btn btn-primary">DEVOUR IT!</button>
                        </form>
                    </div>
                    {{/unless}}
                    {{/each}}
                
             </div>        

         <div class="col-sm-6 text-center task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder=
                    "{{this.id}}. {{this.burger_name}}" readonly> 
                 
                {{/if}}
            {{/each}}
                 </div>
             </div>
        </div> 
        <br>

